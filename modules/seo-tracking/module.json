{
    "name": "SEO Position Tracking",
    "slug": "seo-tracking",
    "version": "1.0.0",
    "description": "Monitoraggio posizionamento keyword e traffico organico con GSC e analisi AI",
    "icon": "chart-bar",
    "menu_order": 15,
    "requires": {
        "php": ">=8.0",
        "services": ["ai"]
    },
    "credits": {
        "rank_check": {
            "cost": 1,
            "description": "Verifica posizione SERP singola keyword"
        },
        "gsc_full_sync": {
            "cost": 10,
            "description": "Sync storico completo GSC (16 mesi)"
        },
        "weekly_digest": {
            "cost": 5,
            "description": "Report settimanale AI"
        },
        "monthly_executive": {
            "cost": 15,
            "description": "Report mensile executive AI"
        },
        "keyword_analysis": {
            "cost": 5,
            "description": "Analisi keyword AI on-demand"
        },
        "anomaly_detection": {
            "cost": 5,
            "description": "Rilevamento anomalie AI"
        },
        "alert_ai_insight": {
            "cost": 1,
            "description": "Insight AI per alert"
        },
        "page_analysis": {
            "cost": 2,
            "description": "Analisi SEO pagina con competitor comparison"
        }
    },
    "settings_groups": {
        "ai_config": {
            "label": "Configurazione AI",
            "icon": "sparkles",
            "description": "Provider e modello AI per questo modulo",
            "order": 0
        },
        "provider_config": {
            "label": "Provider Esterni",
            "icon": "globe-alt",
            "description": "Selezione provider per rank check e volumi keyword",
            "order": 0.5
        },
        "cron_rank": {
            "label": "Rank Check Automatico",
            "icon": "chart-bar",
            "description": "Verifica automatica posizioni SERP via API",
            "order": 1
        },
        "cron_gsc": {
            "label": "Sync GSC Automatico",
            "icon": "refresh",
            "description": "Sincronizzazione metriche da Google Search Console",
            "order": 2
        },
        "cron_ai": {
            "label": "Report AI Automatici",
            "icon": "sparkles",
            "description": "Generazione automatica report settimanali AI",
            "order": 3
        },
        "costs": {
            "label": "Costi Operazioni",
            "icon": "currency-euro",
            "description": "Crediti consumati per ogni operazione",
            "order": 4,
            "collapsed": true
        }
    },
    "settings": {
        "ai_provider": {
            "type": "select",
            "label": "Provider AI",
            "description": "Provider AI per questo modulo",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"},
                {"value": "anthropic", "label": "Anthropic (Claude)"},
                {"value": "openai", "label": "OpenAI (GPT)"}
            ]
        },
        "ai_model": {
            "type": "select",
            "label": "Modello AI",
            "description": "Modello AI per questo modulo",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"}
            ]
        },
        "ai_fallback_enabled": {
            "type": "select",
            "label": "Fallback AI",
            "description": "Fallback automatico su altro provider se il primario fallisce",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"},
                {"value": "1", "label": "Abilitato"},
                {"value": "0", "label": "Disabilitato"}
            ]
        },
        "serp_provider": {
            "type": "select",
            "label": "Provider Rank Check",
            "description": "Provider per la verifica posizioni SERP",
            "default": "auto",
            "admin_only": true,
            "group": "provider_config",
            "options": [
                {"value": "auto", "label": "Auto (cascata tutti i provider)"},
                {"value": "serper", "label": "Serper.dev"},
                {"value": "dataforseo", "label": "DataForSEO"},
                {"value": "serpapi", "label": "SerpAPI"}
            ]
        },
        "volume_provider": {
            "type": "select",
            "label": "Provider Volumi Keyword",
            "description": "Provider per i volumi di ricerca keyword",
            "default": "auto",
            "admin_only": true,
            "group": "provider_config",
            "options": [
                {"value": "auto", "label": "Auto (cascata tutti i provider)"},
                {"value": "rapidapi", "label": "RapidAPI"},
                {"value": "dataforseo", "label": "DataForSEO"},
                {"value": "keywordseverywhere", "label": "Keywords Everywhere"}
            ]
        },
        "rank_auto_enabled": {
            "type": "checkbox",
            "label": "Abilita Auto Rank Check",
            "description": "Verifica automatica posizioni SERP per tutte le keyword tracciate",
            "default": false,
            "admin_only": true,
            "group": "cron_rank"
        },
        "rank_auto_days": {
            "type": "select",
            "label": "Frequenza",
            "description": "Giorni della settimana per la verifica automatica",
            "default": "mon_thu",
            "admin_only": true,
            "group": "cron_rank",
            "options": [
                {"value": "mon_thu", "label": "2 volte/settimana (Lun e Gio)"},
                {"value": "mon_wed_fri", "label": "3 volte/settimana (Lun, Mer, Ven)"},
                {"value": "daily", "label": "Ogni giorno"},
                {"value": "weekly", "label": "1 volta/settimana (Lunedi)"}
            ]
        },
        "rank_auto_time": {
            "type": "text",
            "label": "Orario",
            "description": "Orario di esecuzione (formato HH:MM)",
            "default": "04:00",
            "admin_only": true,
            "group": "cron_rank"
        },
        "gsc_sync_enabled": {
            "type": "checkbox",
            "label": "Abilita Sync GSC Automatico",
            "description": "Sincronizza automaticamente le metriche GSC per le keyword tracciate",
            "default": false,
            "admin_only": true,
            "group": "cron_gsc"
        },
        "gsc_sync_frequency": {
            "type": "select",
            "label": "Frequenza",
            "description": "Frequenza di sincronizzazione metriche",
            "default": "daily",
            "admin_only": true,
            "group": "cron_gsc",
            "options": [
                {"value": "daily", "label": "Ogni giorno"},
                {"value": "mon_thu", "label": "2 volte/settimana (Lun e Gio)"},
                {"value": "mon_wed_fri", "label": "3 volte/settimana (Lun, Mer, Ven)"},
                {"value": "weekly", "label": "1 volta/settimana (Lunedi)"}
            ]
        },
        "gsc_sync_time": {
            "type": "text",
            "label": "Orario",
            "description": "Orario di sincronizzazione (formato HH:MM)",
            "default": "05:00",
            "admin_only": true,
            "group": "cron_gsc"
        },
        "ai_reports_enabled": {
            "type": "checkbox",
            "label": "Abilita Report AI Automatici",
            "description": "Genera automaticamente report AI settimanali per tutti i progetti",
            "default": false,
            "admin_only": true,
            "group": "cron_ai"
        },
        "ai_reports_day": {
            "type": "select",
            "label": "Giorno",
            "description": "Giorno della settimana per la generazione",
            "default": "1",
            "admin_only": true,
            "group": "cron_ai",
            "options": [
                {"value": "1", "label": "Lunedi"},
                {"value": "2", "label": "Martedi"},
                {"value": "3", "label": "Mercoledi"},
                {"value": "4", "label": "Giovedi"},
                {"value": "5", "label": "Venerdi"},
                {"value": "6", "label": "Sabato"},
                {"value": "0", "label": "Domenica"}
            ]
        },
        "ai_reports_time": {
            "type": "text",
            "label": "Orario",
            "description": "Orario di generazione (formato HH:MM)",
            "default": "07:00",
            "admin_only": true,
            "group": "cron_ai"
        },
        "cost_gsc_full_sync": {
            "type": "number",
            "label": "Sync Completa GSC",
            "description": "Crediti per sincronizzazione completa GSC (16 mesi)",
            "default": 10,
            "min": 0,
            "step": 0.1,
            "admin_only": true,
            "group": "costs"
        },
        "cost_quick_wins": {
            "type": "number",
            "label": "Analisi Quick Wins",
            "description": "Crediti per analisi Quick Wins AI",
            "default": 2,
            "min": 0,
            "step": 0.1,
            "admin_only": true,
            "group": "costs"
        },
        "cost_weekly_digest": {
            "type": "number",
            "label": "Report Settimanale",
            "description": "Crediti per report settimanale AI",
            "default": 5,
            "min": 0,
            "step": 0.1,
            "admin_only": true,
            "group": "costs"
        },
        "cost_monthly_executive": {
            "type": "number",
            "label": "Report Mensile",
            "description": "Crediti per report mensile executive",
            "default": 15,
            "min": 0,
            "step": 0.1,
            "admin_only": true,
            "group": "costs"
        },
        "cost_keyword_analysis": {
            "type": "number",
            "label": "Analisi Keyword",
            "description": "Crediti per analisi keyword AI on-demand",
            "default": 5,
            "min": 0,
            "step": 0.1,
            "admin_only": true,
            "group": "costs"
        },
        "cost_anomaly_detection": {
            "type": "number",
            "label": "Rilevamento Anomalie",
            "description": "Crediti per rilevamento anomalie AI",
            "default": 5,
            "min": 0,
            "step": 0.1,
            "admin_only": true,
            "group": "costs"
        },
        "cost_page_analysis": {
            "type": "number",
            "label": "Analisi Pagina SEO",
            "description": "Crediti per analisi SEO pagina",
            "default": 2,
            "min": 0,
            "step": 0.1,
            "admin_only": true,
            "group": "costs"
        }
    },
    "routes_prefix": "/seo-tracking"
}
