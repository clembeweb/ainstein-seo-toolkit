{
    "name": "AI SEO Content Generator",
    "slug": "ai-content",
    "version": "1.0.0",
    "description": "Genera articoli SEO-ottimizzati con AI partendo da analisi SERP",
    "icon": "pencil-square",
    "color": "purple",
    "menu_order": 20,
    "requires": {
        "php": ">=8.0",
        "credits": true,
        "services": ["ai", "scraper"]
    },
    "credits": {
        "serp_extraction": 3,
        "scrape_per_url": 1,
        "article_generation": 10,
        "cover_image_generation": 3,
        "wp_publish": 0
    },
    "settings_groups": {
        "ai_config": {
            "label": "Configurazione AI",
            "icon": "sparkles",
            "description": "Provider e modello AI per questo modulo",
            "order": 0
        },
        "provider_config": {
            "label": "Provider SERP",
            "icon": "globe-alt",
            "description": "Provider per estrazione risultati SERP e analisi competitor",
            "order": 0.5
        }
    },
    "settings": {
        "ai_provider": {
            "type": "select",
            "label": "Provider AI",
            "description": "Provider AI per questo modulo",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"},
                {"value": "anthropic", "label": "Anthropic (Claude)"},
                {"value": "openai", "label": "OpenAI (GPT)"}
            ]
        },
        "ai_model": {
            "type": "select",
            "label": "Modello AI",
            "description": "Modello AI per questo modulo",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"}
            ]
        },
        "ai_fallback_enabled": {
            "type": "select",
            "label": "Fallback AI",
            "description": "Fallback automatico su altro provider se il primario fallisce",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"},
                {"value": "1", "label": "Abilitato"},
                {"value": "0", "label": "Disabilitato"}
            ]
        },
        "serp_provider": {
            "type": "select",
            "label": "Provider SERP",
            "description": "Provider per estrazione risultati di ricerca Google",
            "default": "serper",
            "admin_only": true,
            "group": "provider_config",
            "options": [
                {"value": "serper", "label": "Serper.dev"},
                {"value": "serpapi", "label": "SerpAPI"}
            ]
        },
        "serpapi_key": {
            "type": "password",
            "label": "SerpAPI Key (dedicata al modulo)",
            "description": "API Key SerpAPI specifica per questo modulo. Se vuota, non disponibile come provider.",
            "admin_only": true,
            "group": "provider_config"
        },
        "default_language": {
            "type": "select",
            "label": "Lingua default",
            "options": ["it", "en", "es", "de", "fr"],
            "default": "it"
        },
        "default_word_count": {
            "type": "number",
            "label": "Parole target articolo",
            "default": 1500
        },
        "max_sources": {
            "type": "number",
            "label": "Max fonti per articolo",
            "default": 6
        },
        "cost_serp_extraction": {
            "type": "number",
            "label": "Costo Estrazione SERP",
            "description": "Crediti per analisi SERP e competitor",
            "default": 3,
            "min": 0,
            "step": 0.1,
            "admin_only": true
        },
        "cost_content_scrape": {
            "type": "number",
            "label": "Costo Scraping per URL",
            "description": "Crediti per scraping contenuto pagina",
            "default": 1,
            "min": 0,
            "step": 0.1,
            "admin_only": true
        },
        "cost_brief_generation": {
            "type": "number",
            "label": "Costo Generazione Brief",
            "description": "Crediti per generazione brief AI",
            "default": 5,
            "min": 0,
            "step": 0.1,
            "admin_only": true
        },
        "cost_article_generation": {
            "type": "number",
            "label": "Costo Generazione Articolo",
            "description": "Crediti per generazione articolo completo",
            "default": 10,
            "min": 0,
            "step": 0.1,
            "admin_only": true
        },
        "cost_cover_image_generation": {
            "type": "number",
            "label": "Costo Generazione Copertina",
            "description": "Crediti per generazione immagine di copertina via DALL-E 3",
            "default": 3,
            "min": 0,
            "step": 0.1,
            "admin_only": true
        }
    }
}
