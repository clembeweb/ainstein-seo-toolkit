{
    "name": "SEO Audit",
    "slug": "seo-audit",
    "version": "1.1.0",
    "description": "Audit SEO completo con Piano d'Azione AI",
    "icon": "clipboard-document-check",
    "menu_order": 20,
    "requires": {
        "php": ">=8.0",
        "services": ["scraper", "ai"]
    },
    "credits": {
        "crawl_per_page": {
            "cost": 0.2,
            "description": "Scansione singola pagina"
        },
        "action_plan_generate": {
            "cost": 15,
            "description": "Generazione Piano d'Azione AI completo"
        }
    },
    "settings_groups": {
        "ai_config": {
            "label": "Configurazione AI",
            "icon": "sparkles",
            "description": "Provider e modello AI per questo modulo",
            "order": 0
        },
        "costs": {
            "label": "Costi Operazioni",
            "icon": "currency-euro",
            "description": "Crediti consumati per ogni operazione",
            "order": 99,
            "collapsed": true
        }
    },
    "settings": {
        "ai_provider": {
            "type": "select",
            "label": "Provider AI",
            "description": "Provider AI per questo modulo",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"},
                {"value": "anthropic", "label": "Anthropic (Claude)"},
                {"value": "openai", "label": "OpenAI (GPT)"}
            ]
        },
        "ai_model": {
            "type": "select",
            "label": "Modello AI",
            "description": "Modello AI per questo modulo",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"}
            ]
        },
        "ai_fallback_enabled": {
            "type": "select",
            "label": "Fallback AI",
            "description": "Fallback automatico su altro provider se il primario fallisce",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"},
                {"value": "1", "label": "Abilitato"},
                {"value": "0", "label": "Disabilitato"}
            ]
        },
        "cost_action_plan_generate": {
            "type": "number",
            "label": "Costo Piano d'Azione AI",
            "description": "Crediti per generazione Piano d'Azione AI",
            "default": 15,
            "min": 0,
            "step": 0.1,
            "admin_only": true,
            "group": "costs"
        }
    },
    "routes_prefix": "/seo-audit"
}
