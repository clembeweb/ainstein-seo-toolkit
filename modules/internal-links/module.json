{
    "name": "Internal Links Analyzer",
    "slug": "internal-links",
    "version": "1.0.0",
    "description": "Analizza e ottimizza la struttura di link interni",
    "icon": "link",
    "menu_order": 10,
    "requires": {
        "php": ">=8.0",
        "credits": true,
        "services": ["ai", "scraper"]
    },
    "settings_groups": {
        "ai_config": {
            "label": "Configurazione AI",
            "icon": "sparkles",
            "description": "Provider e modello AI per questo modulo",
            "order": 0
        }
    },
    "settings": {
        "ai_provider": {
            "type": "select",
            "label": "Provider AI",
            "description": "Provider AI per questo modulo",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"},
                {"value": "anthropic", "label": "Anthropic (Claude)"},
                {"value": "openai", "label": "OpenAI (GPT)"}
            ]
        },
        "ai_model": {
            "type": "select",
            "label": "Modello AI",
            "description": "Modello AI per questo modulo",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"}
            ]
        },
        "ai_fallback_enabled": {
            "type": "select",
            "label": "Fallback AI",
            "description": "Fallback automatico su altro provider se il primario fallisce",
            "default": "global",
            "admin_only": true,
            "group": "ai_config",
            "options": [
                {"value": "global", "label": "Usa impostazione globale"},
                {"value": "1", "label": "Abilitato"},
                {"value": "0", "label": "Disabilitato"}
            ]
        },
        "cost_link_analysis": {
            "type": "number",
            "label": "Costo Analisi Link",
            "description": "Crediti per analisi link interni",
            "default": 0.5,
            "min": 0,
            "step": 0.1,
            "admin_only": true
        },
        "cost_ai_suggestions": {
            "type": "number",
            "label": "Costo Suggerimenti AI",
            "description": "Crediti per suggerimenti AI link",
            "default": 1,
            "min": 0,
            "step": 0.1,
            "admin_only": true
        }
    },
    "routes_prefix": "/internal-links"
}
